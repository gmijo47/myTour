<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LoginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    android:orientation="vertical"
    tools:context=".Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/pfad_41"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:background="@drawable/zemlja"
            android:layout_marginLeft="-144dp"
            android:layout_marginTop="21dp"/>




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/TopLayoutLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="98dp"
            android:background="@drawable/login_container">
            <TextView
                android:id="@+id/LoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Dobrodošli!"
                android:textSize="28dp"
                android:textColor="@color/dark_blue"
                android:fontFamily="sans-serif-black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/LoginSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="25dp"
                android:fontFamily="sans-serif-black"
                android:text="MOLIMO PRIJAVITE SE!"
                android:textColor="@color/dark_blue"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginTitle" />


            <EditText
                android:id="@+id/LoginEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_field"
                android:ems="10"
                android:hint="VAŠA E-MAIL ADRESA"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:textColor="@color/stroke_gray"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/LoginTitle"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/LoginPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_field"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="VAŠA LOZINKA"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textAlignment="textStart"
                android:textColor="@color/stroke_gray"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginEmail"
                tools:ignore="MissingConstraints" />


            <Button
                android:id="@+id/LoginBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_login"
                android:text="mytour Prijava"
                android:drawableLeft="@drawable/zemlja_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginRememberPassword" />

            <TextView
                android:id="@+id/ortxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:hint="VAŠA LOZINKA"
                android:text="ili"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginBtn" />

            <TextView
                android:id="@+id/LoginForgotPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="4dp"
                android:text="Zaboravljena lozinka?"
                android:textAlignment="center"
                android:layout_marginStart="25dp"
                android:clickable="true"
                android:textColor="@color/dark_blue"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/LoginPassword"
                app:layout_constraintStart_toStartOf="parent"/>

            <CheckBox
                android:id="@+id/LoginRememberPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="sans-serif"
                android:text="ZAPAMTI MOJU PRIJAVU"
                android:textColor="@color/stroke_gray"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginForgotPassword" />

            <Button
                android:id="@+id/LoginGoogleBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_login"
                android:text="Google prijava"
                android:drawableLeft="@drawable/google_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ortxt" />

            <TextView
                android:id="@+id/LoginCreateACCRedirect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:text="Nemate MyTour nalog? Kliknite ovdje!"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoginGoogleBtn" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-21dp"
            android:layout_marginEnd="-35dp"
            android:background="@drawable/mijesec" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/bannermid" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>