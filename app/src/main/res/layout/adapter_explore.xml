<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_height="180dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@drawable/featured_shape">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:id="@+id/explorePlaceImg"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_npark_holder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/explorePlaceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text=""
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/explorePlaceImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/explorePlaceDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/explorePlaceName"
        app:layout_constraintTop_toBottomOf="@+id/explorePlaceName" />

</androidx.constraintlayout.widget.ConstraintLayout>
